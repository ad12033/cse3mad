{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "module": "Node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "types/**/*.d.ts"
  ]
}
